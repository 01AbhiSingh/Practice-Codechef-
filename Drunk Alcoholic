#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int ans=0;
	    for(int i=1;i<=n;i++){
	        if(i%2==0){
	            ans=ans-1;
	        }
	        if(i%2!=0){
	            ans=ans+3;
	        }
	    }
	    cout<<ans<<endl;
	}
	return 0;
}
